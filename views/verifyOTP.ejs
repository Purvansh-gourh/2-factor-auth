<%- include("./partials/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-3 col-md-2 col-1"></div>
        <div class="col-lg-6 col-md-8 col-10" id="inputForm">
            <div class="container py-5">
                <form action="/verifyotp/<%= currentUser.id%>" method="POST">
                    <div class="alert alert-info" role="alert">
                        <h4>Verify OTP</h4>
                    </div>
                    <div class="form-group">
                        <label for="otp">OTP</label>
                        <input type="text" class="form-control" id="maalik" name="otp"
                            placeholder="Enter otp sent to your registered mobile number" required>
                    </div>
                    <div class="">
                        <!-- <button type="submit" class="btn btn-primary mx-auto">Submit</button> -->
                        <input type="submit" class="btn btn-primary w-100" value="Verify" />
                    </div>
                </form>
                <a class="nav-link" id='resendOTP'>Click here to resend OTP &nbsp; <span class='count'></span></a>
                <a class="nav-link pt-0" id='callOTP'>Send OTP via call
                    <span class='count'></span></a>
            </div>
        </div>
        <div class="col-lg-3 col-md-2 col-1"></div>
    </div>
</div>



<%- include("./partials/footer") %>
<script>
    $(document).ready(function () {
        var counter = 30;
        var id = setInterval(function () {
            counter--;
            if (counter < 0) {
                $('.count').html('');
                $('#resendOTP').attr('href', '/sendotp/<%= currentUser.id%>');
                $('#callOTP').attr('href', "/sendotp/<%= currentUser.id%>?method=call");
                clearInterval(id);
            } else {
                console.log(counter);
                $('.count').html('( ' + counter + ' )');
            }
        }, 1000);
    });
</script>