<%- include("./partials/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-3 col-md-2 col-1"></div>
        <div class="col-lg-6 col-md-8 col-10" id="inputForm">
            <div class="container py-5">
                <form action="/changepassword/<%= currentUser.id%>" method="POST">
                    <div class="alert alert-info" role="alert">
                        <h4>Change Password</h4>
                    </div>
                    <div class="form-group">
                        <label for="kunjiOld">Current Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control d-inline" id="kunjiOld" name="oldPassword"
                                placeholder="Enter current password here" required>
                            <i class="fas fa-eye form-control seePwd" data-id="#kunjiOld"
                                style="max-width: 50px;text-align: center;line-height: 1.5;background-color:#e9ecef"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="kunjiNew">New Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control d-inline" id="kunjiNew" name="newPassword"
                                placeholder="Enter new password here" required>
                            <i class="fas fa-eye form-control seePwd" data-id="#kunjiNew"
                                style="max-width: 50px;text-align: center;line-height: 1.5;background-color:#e9ecef"></i>
                        </div>
                    </div>
                    <div class="">
                        <!-- <button type="submit" class="btn btn-primary mx-auto">Submit</button> -->
                        <input type="submit" class="btn btn-primary w-100" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-3 col-md-2 col-1"></div>
    </div>
</div>



<%- include("./partials/footer") %>
<script>
    $('.seePwd').on('click', function () {
        // $('#kunji').attr('type', 'text');
        $(this).toggleClass("fa-eye fa-eye-slash");
        var input = $($(this).data('id'));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    })
</script>